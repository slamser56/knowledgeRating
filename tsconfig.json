{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "*": ["src/*"],
      "utils": ["src/utils/*"],
      "guards": ["src/guards/*"],
      "filters": ["src/filters/*"],
      "interceptors": ["src/interceptors/*"],
    },
  }
}
